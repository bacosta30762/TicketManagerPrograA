@model Web.ViewModels.Tickets.CreateTicketViewModel

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="create-ticket-container">
    <h1 class="title">Create Ticket</h1>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter ticket title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter ticket description" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary btn-block" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
